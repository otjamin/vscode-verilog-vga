{
  "name": "verilogvga",
  "displayName": "VerilogVGA",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "verilogvga.simulate",
        "title": "VerilogVGA: Simulate VGA Output"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run copy-wasm",
    "compile": "tsc -p ./ && npm run copy-wasm",
    "copy-wasm": "mkdir -p out/verilator && cp src/verilator/verilator_bin.wasm out/verilator/verilator_bin.wasm && cp src/verilator/verilator_bin.js out/verilator/verilator_bin.js",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "binaryen": "^122.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
